{
  "info": {
    "name": "User Management API - CRUD Operations",
    "description": "Collection for testing all CRUD operations as specified in promptContext.txt",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "1. Get All Users",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/users",
          "host": ["{{baseUrl}}"],
          "path": ["api", "users"]
        },
        "description": "Retrieves all users from the system"
      }
    },
    {
      "name": "2. Get User by ID",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/users/1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "users", "1"]
        },
        "description": "Gets a specific user by their ID"
      }
    },
    {
      "name": "3. Create New User",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"age\": 30,\n  \"gender\": \"male\",\n  \"email\": \"john.doe@example.com\",\n  \"phone\": \"+1-555-123-4567\",\n  \"username\": \"johndoe\",\n  \"password\": \"securepass\",\n  \"birthDate\": \"1994-01-15\",\n  \"role\": \"user\"\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/users",
          "host": ["{{baseUrl}}"],
          "path": ["api", "users"]
        },
        "description": "Creates a new user with the provided information"
      }
    },
    {
      "name": "4. Update User's Age",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"age\": 31\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/users/1/age",
          "host": ["{{baseUrl}}"],
          "path": ["api", "users", "1", "age"]
        },
        "description": "Updates the age of a specific user"
      }
    },
    {
      "name": "5. Delete User by ID",
      "request": {
        "method": "DELETE",
        "header": [],
        "url": {
          "raw": "{{baseUrl}}/api/users/1",
          "host": ["{{baseUrl}}"],
          "path": ["api", "users", "1"]
        },
        "description": "Deletes a user by their ID"
      }
    }
  ],
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080",
      "type": "string"
    }
  ]
}
